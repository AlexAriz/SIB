<%- model_class = SelectionProcess -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<div class="panel-group">
  <div class="panel panel-default">
    <div class="panel-heading">
      <h3 class="dl-horizontal">
        <dt><strong><%= model_class.human_attribute_name(:id) %>:</strong></dt>
        <dd><%= @selection_process.id %></dd>
      </h3>
    </div>
    <div class="panel-body">
      <dl class="dl-horizontal">
        <dt><strong><%= model_class.human_attribute_name(:university_name) %>:</strong></dt>
        <dd><%= @selection_process.university_name %></dd>
        <dt><strong><%= model_class.human_attribute_name(:deadline) %>:</strong></dt>
        <dd><%= @selection_process.deadline %></dd>
        <dt><strong><%= model_class.human_attribute_name(:link) %>:</strong></dt>
        <dd><%= @selection_process.link %></dd>
      </dl>
    </div>
  </div>

  <div class="panel panel-default">
    <div class="panel-heading">
      <h3 class="dl-horizontal">
        <dt><strong><%= model_class.human_attribute_name(:activities) %>:</strong></dt>
        <dd><%= @selection_process.university_name %></dd>
      </h3>
    </div>
    <div class="panel-body">
      <dl class="dl-horizontal">
        <dd><%= @selection_process.activities %></dd>
      </dl>
    </div>
  </div>
</div>

<%= link_to t('.back', :default => t("helpers.links.back")),
              selection_processes_path, :class => 'btn btn-default'  %>

<% unless current_user_candidate? %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
                edit_selection_process_path(@selection_process), :class => 'btn btn-info' %>
<hr>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                selection_process_path(@selection_process),
                :method => 'delete',
                :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                :class => 'btn btn-danger' %>
<% end %>
