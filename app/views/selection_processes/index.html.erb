<%- model_class = SelectionProcess -%>
<div class="page-header">
  <h1><%=t '.title', :default => "Procesos de Selección" %></h1>
</div>

<table class="table table-striped table-responsive table-bordered text-center" id="selection-processes-table">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:university_name) %></th>
      <th><%= model_class.human_attribute_name(:deadline) %></th>
      <th><%= model_class.human_attribute_name(:activities) %></th>
      <th><%= model_class.human_attribute_name(:link) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @selection_processes.each do |selection_process| %>
      <tr>
        <td><%= link_to selection_process.university_name, selection_process_path(selection_process) %></td>
        <td><%= selection_process.deadline %></td>
        <td><%= selection_process.activities %></td>
        <td><%= selection_process.link %></td>
        <td>
          <%= link_to selection_process do %>
              <span class="glyphicon glyphicon-eye-open"></span>
          <% end %>
        <% if can? :manage, @selection_process %><%= link_to edit_selection_process_path(selection_process) do  %>
                  <span class="glyphicon glyphicon-pencil"></span>
              <% end %>

              <%= link_to selection_process_path(selection_process),
                          :method => :delete,
                          :data => {:confirm =>
                                        "<p>¿Seguro que desea <strong class='text-danger'>ELIMINAR</strong> el proceso de selección con la siguiente información?
                                    <ul>
                                    <li>Nombre de la Universidad: <strong class='text-info'>#{selection_process.university_name}</strong></li>
                                    <li>Actividades: #{selection_process.activities}</li>
                                    </ul>
                                    </p>"} do %>
                  <span class="glyphicon glyphicon-remove"></span>
              <% end %>
            </td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<% unless current_user_candidate? %>
    <%= link_to t('.new', :default => t("Crear información para proceso de selección")),
                new_selection_process_path,
                :class => 'btn btn-info' %>
<% end %>