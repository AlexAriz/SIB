<%- model_class = WorkMaterial -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human(:count => @work_materials.count) %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:name) %></th>
      <th><%= model_class.human_attribute_name(:description) %></th>
      <th><%= model_class.human_attribute_name(:tutor_id) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @work_materials.each do |work_material| %>
      <tr>
        <td><%= work_material.name %></td>
        <td><%= work_material.description %></td>
        <td><%= work_material.tutor.user_name %></td>
        <td><%=l work_material.created_at %></td>
        <td>
          <%= link_to t('.show', :defaul => t("helpers.links.show")),
                      work_material_path(work_material, :class => 'btn btn-default') %>
          <% if current_user.type == 'Tutor' %>
              <%= link_to t('.edit', :default => t("helpers.links.edit")),
                          edit_work_material_path(work_material), :class => 'btn btn-default btn-xs' %>
              <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                          work_material_path(work_material),
                          :method => :delete,
                          :data => {:confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?'))},
                          :class => 'btn btn-xs btn-danger' %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<% if current_user.type == "Tutor" %>
    <%= link_to t('.new', :default => t("helpers.links.new")),
                new_work_material_path,
                :class => 'btn btn-primary' %>
<% end %>