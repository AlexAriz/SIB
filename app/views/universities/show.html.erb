<h1>Universidad: <%= @university.name %></h1>
<div class="panel-group">
  <div class="panel panel-default">
    <div class="panel-heading">Detalles de <%= @university.name %></div>
    <div class="panel-body">
      <p>
        <strong>Nombre de la universidad:</strong>
        <%= @university.name %>
      </p>

      <p>
        <strong>Ciudad:</strong>
        <%= @university.city %>
      </p>

      <p>
        <strong>Estado:</strong>
        <%= @university.state %>
      </p>

      <p>
        <strong>Pais:</strong>
        <%= @university.country %>
      </p>

    </div>
  </div>
  <div class="panel panel-default">
    <div class="panel-heading">Informacion general</div>
    <div class="panel-body">
      <p>
        <%= @university.information %>
      </p>
    </div>
  </div>
</div>

