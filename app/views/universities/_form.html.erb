<%= simple_form_for @university, :html => {:class => 'form-horizontal'} do |f| %>
    <%= f.input :name %>
    <%= error_span(@university[:name]) %>
    <%= f.input :country, value_method: :id,
                input_html: {
                    'data-live-search' => true,
                    class: 'selectpicker',
                    multiple: false,
                },
                prompt: true,
                required: true %>
    <%= error_span(@university[:country]) %>
    <%= f.input :state %>
    <%= error_span(@university[:state]) %>
    <%= f.input :city %>
    <%= error_span(@university[:city]) %>
    <%= f.input :information %>
    <%= error_span(@university[:information]) %>
    <%= f.input :url %>
    <%= error_span(@university[:url]) %>

    <%= f.button :submit, :class => 'btn-info primary' %>
    <%= link_to t('.cancel', :default => t('helpers.links.cancel')),
                universities_path, :class => 'btn btn-default' %>
<% end %>
