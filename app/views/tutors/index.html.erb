<%- model_class = Tutor -%>
<div class="text-center">
  <h1><%= t '.title', :default => model_class.model_name.human(:count => 2) %></h1>
</div>
<div class="panel panel-default">
  <div class="panel-heading">Parámetros de búsqueda</div>
  <div class="panel-body">
    <%= form_tag(tutors_path, :method => 'get', id: 'search-form',
                 html: {class: 'form-horizontal'}) do %>
        <div class="row">
          <div class="col-md-6">
            <div class="col-md-6">
              <div class="pull-right">
                <%= label_tag 'Nombre de usuario:' %>
              </div>
            </div>
            <div class="col-md-6">
              <%= text_field_tag :user_name, params[:user_name],
                                 class: 'form-control' %>
            </div>
          </div>
          <div class="col-md-6">
            <div class="col-md-6">
              <div class="pull-right">
                <%= label_tag 'Correo: ' %>
              </div>
            </div>
            <div class="col-md-6">
              <%= text_field_tag :email, params[:email], class: 'form-control' %>
            </div>
          </div>
        </div>
        <br>
        <div class="row">
          <div class="col-md-offset-11">
            <%= button_tag type: 'submit', class: 'btn btn-primary' do %>
                <i class="fa fa-search"></i> Buscar
            <% end %>
          </div>
        </div>
    <% end %>
  </div>
</div>
<% if @tutors.present? %>
    <table class="table table-striped table-responsive table-bordered text-center" id="tutors-table">
      <thead>
      <tr>
        <th><%= model_class.human_attribute_name(:id) %></th>
        <th><%= model_class.human_attribute_name(:email) %></th>
        <th><%= model_class.human_attribute_name(:user_name) %></th>
        <th><%= t '.actions', :default => t("helpers.actions") %></th>
      </tr>
      </thead>
      <tbody>
      <% @tutors.each do |tutor| %>
          <tr>
            <td><%= tutor.id %></td>
            <td><%= tutor.email %></td>
            <td><%= tutor.user_name %></td>
            <td>
              <%= link_to tutor_path(tutor) do %>
                  <span class="glyphicon glyphicon-eye-open"></span>
              <% end %>
            </td>
          </tr>
      <% end %>
      </tbody>
    </table>
<% end %>